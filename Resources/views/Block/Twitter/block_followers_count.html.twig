{% extends 'PrestaCMSCoreBundle:Block:base_block.html.twig' %}

{% trans_default_domain "PrestaCMSSocialBundle" %}

{% block block %}
    {% if followers_count is defined %}
        <div class="prestacms-twitter-followers-count">
            <a href="https://www.twitter.com/{{ settings.twitter_username }}" target="_blank">
                <strong>{{ "presta_cms_social.block.twitter.followers_count.title" | trans }}</strong>
                <span>{{ "presta_cms_social.block.twitter.followers_count.text" | transchoice(followers_count, {"%followers_count%": followers_count }) }}</span>
            </a>
        </div>
    {% endif %}
{% endblock %}
